{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "lib": ["es6", "dom.iterable"],
    "outDir": "dist",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}